<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body>
    <div
      class="
        container-fluid
        d-flex
        justify-content-center
        align-items-center
        h-100
      "
    >
      <% if(typeof errors !== 'undefined'){ %>
      <ul>
        <% errors.forEach(err => { %>
        <li><%= err.message %></li>
        <% }) %>
      </ul>
      <% } %>
      <!-- prettier-ignore -->
      <% if(typeof error !== 'undefined'){ %>
      <p><%= error %></p>
      <% } %>

      <div class="bg-light w-50 px-4 py-3 rounded">
        <div class="text-center">
          <h2>Become a member</h2>
          <p>
            Already have an account?
            <a class="link-primary text-decoration-none" href="/login">Login</a>
          </p>
        </div>

        <form method="POST" action="">
          <div class="form-group py-2">
            <label class="fw-bold" for="username">Username:</label>
            <input class="form-control" type="text" name="username" />
          </div>

          <div class="form-group py-2">
            <label class="fw-bold" for="password">Password:</label>
            <input class="form-control" type="password" name="password" />
          </div>

          <div class="form-group py-2">
            <label class="fw-bold" for="confirm-password"
              >Confirm Password:</label
            >
            <input
              class="form-control"
              type="password"
              name="confirm-password"
            />
          </div>

          <div class="form-group py-2">
            <label class="fw-bold" for="secretPassword">Secret Password:</label>
            <input class="form-control" type="password" name="secretPassword" />
          </div>

          <label class="fw-bold">Select Avatar:</label>

          <div class="button-group py-2 row" role="group">
            <div class="col">
              <label>
                <input type="radio" name="avatar" value="leo" checked />
                <img
                  src="/images/avatars/leo.jpg"
                  class="img-fluid avatar rounded-circle"
                />
              </label>
            </div>

            <div class="col">
              <label>
                <input type="radio" name="avatar" value="harold" />
                <img
                  src="/images/avatars/harold.jpg"
                  class="img-fluid avatar rounded-circle"
                />
              </label>
            </div>

            <div class="col">
              <label>
                <input type="radio" name="avatar" value="doge" />
                <img
                  src="/images/avatars/doge.jpg"
                  class="img-fluid avatar rounded-circle"
                />
              </label>
            </div>

            <div class="col">
              <label>
                <input type="radio" name="avatar" value="thomas" />
                <img
                  src="/images/avatars/thomas.png"
                  class="img-fluid avatar rounded-circle"
                />
              </label>
            </div>

            <div class="col">
              <label>
                <input type="radio" name="avatar" value="will" />
                <img
                  src="/images/avatars/will.jpg"
                  class="img-fluid avatar rounded-circle"
                />
              </label>
            </div>
          </div>

          <div class="pt-4">
            <button class="btn btn-primary">Sign Up</button>
            <a class="btn btn-outline-primary mx-2" href="/">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
